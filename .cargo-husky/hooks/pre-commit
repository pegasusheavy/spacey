#!/bin/sh
# Pre-commit hook: format check and linting
# This runs before each commit to ensure code quality

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Formatting check failed!"
    echo "   Run 'cargo fmt' to fix formatting issues."
    exit 1
fi
echo "âœ… Formatting OK"

# Run clippy
echo "ğŸ“ Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues!"
    echo "   Fix the warnings above before committing."
    exit 1
fi
echo "âœ… Clippy OK"

# Run quick tests (lib tests only for speed)
echo "ğŸ§ª Running quick tests..."
if ! cargo test --lib; then
    echo "âŒ Tests failed!"
    exit 1
fi
echo "âœ… Tests OK"

echo "âœ¨ All pre-commit checks passed!"

